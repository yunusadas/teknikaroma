<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Statik dosyalar için istisna -->
        <rule name="Static Files" stopProcessing="true">
          <match url=".*\.(css|js|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot)$" />
          <action type="None" />
        </rule>

        <!-- tr/index.php'yi index.php'ye yönlendir -->
        <rule name="Redirect tr/index.php" stopProcessing="true">
          <match url="^tr/index\.php$" />
          <conditions>
            <!-- URL'de tr/index.php olup olmadığını kontrol et -->
            <add input="{REQUEST_URI}" pattern="^/tr/index\.php$" />
          </conditions>
          <action type="Rewrite" url="/index.php" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
